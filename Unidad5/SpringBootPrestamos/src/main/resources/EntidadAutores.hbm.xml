<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.acdat.springboot.demo.modelo.EntidadAutores" table="autores" schema="public" catalog="Prestamos">
        <id name="idAutor">
            <column name="id_autor" sql-type="integer"/>
        </id>
        <property name="nombreAutor">
            <column name="nombre_autor" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="pais">
            <column name="pais" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>